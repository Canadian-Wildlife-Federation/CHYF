<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/test/resources/testdata</directory>
            <outputDirectory>/testdata/</outputDirectory>
        </fileSet>
        
    </fileSets>
    
    
    <files>
        <file>
            <source>README.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>LICENSE.txt</destName>
        </file>
       
        <file>
            <source>flowpath-constructor.bat</source>
            <outputDirectory>/</outputDirectory>
            <destName>flowpath-constructor.bat</destName>
            <filtered>true</filtered>
        </file>
        <file>
            <source>bank-only-constructor.bat</source>
            <outputDirectory>/</outputDirectory>
            <destName>bank-only-constructor.bat</destName>
            <filtered>true</filtered>
        </file>
       
        <file>
            <source>catchment-delineator.bat</source>
            <outputDirectory>/</outputDirectory>
            <destName>catchment-delineator.bat</destName>
            <filtered>true</filtered>
        </file>
        <file>
            <source>flowpath-constructor.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>flowpath-constructor.sh</destName>
            <filtered>true</filtered>            
        </file>
        <file>
            <source>bank-only-constructor.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>bank-only-constructor.sh</destName>
            <filtered>true</filtered>            
        </file>
       
        <file>
            <source>catchment-delineator.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>catchment-delineator.sh</destName>
            <filtered>true</filtered>            
        </file>
        
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:*:jar:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib-chyf</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:${project.artifactId}:jar:*</exclude>
            </excludes>
            <includes>
                <include>${project.groupId}:*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>