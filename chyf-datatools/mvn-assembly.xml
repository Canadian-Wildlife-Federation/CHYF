<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/test/resources/testdata/small</directory>
            <outputDirectory>/testdata/slopeaspectelevation</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/test/resources/testdata/small_distance2d</directory>
            <outputDirectory>/testdata/distance2water2d</outputDirectory>
        </fileSet>
    </fileSets>
    
    
    <files>
        <file>
            <source> ${project.build.directory}/${project.artifactId}-${project.version}-${timestamp}.jar</source>
            <outputDirectory>/lib</outputDirectory>
        </file>
        <file>
            <source>README.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>LICENSE</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>run.bat</source>
            <outputDirectory>/</outputDirectory>
            <destName>run.win.bat</destName>
            <filtered>true</filtered>
        </file>
        
         <file>
            <source>run.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>run.linux.sh</destName>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:${project.artifactId}:jar:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>